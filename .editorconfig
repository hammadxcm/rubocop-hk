# EditorConfig helps developers define and maintain
# consistent coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{rb,rake}]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Gemfile{,.lock}]
indent_style = space
indent_size = 2

[*.gemspec]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.{js,json}]
indent_style = space
indent_size = 2